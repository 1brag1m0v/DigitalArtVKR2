<Window x:Class="DigitalArtVKR2.DeleteTests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalArtVKR2"
        mc:Ignorable="d"
        Title="DeleteTests" Height="250" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Выберите, какой тест хотите удалить" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="16" Margin="0,60,0,0"/>
            <ComboBox x:Name="comboIds" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="150" Margin="0,20,0,0"/>
            <Button Content="Удалить" Background="#495C66" BorderThickness="0" HorizontalAlignment="Center" Margin="0,40,0,0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
