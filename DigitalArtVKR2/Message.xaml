<UserControl x:Class="DigitalArtVKR2.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalArtVKR2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle x:Name="rec" Height="100" Width="500" Fill="AliceBlue" RadiusX="30" RadiusY="30" Stroke="Black"/>
        <StackPanel Height="100" Width="500" Margin="20">
            <TextBlock x:Name="nameUser" Text="Шарипова Диана Айдаровна" Padding="7" FontFamily="Arial Black" HorizontalAlignment="Center" Height="30"/>
            <TextBlock x:Name="messageUser" Text="nichego" FontFamily="Arial Black" TextWrapping="Wrap" Height="60" Padding="5" Width="465"/>
        </StackPanel>
    </Grid>
</UserControl>
