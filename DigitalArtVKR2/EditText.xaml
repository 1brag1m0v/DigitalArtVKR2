<Window x:Class="DigitalArtVKR2.EditText"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalArtVKR2"
        mc:Ignorable="d"
        Title="Изменение наполнения" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="0,0,0,340">
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" FontFamily="Arial Black" Text="Наполнение урока" FontSize="20"/>
        </StackPanel>
        <ScrollViewer MaxHeight="330" Width="700" Height="270">
            <TextBox TextWrapping="Wrap" x:Name="lessonText" Background="#495C66" Foreground="White" Text="" Padding="13" FontFamily="Arial Black" materialDesign:TextFieldAssist.TextFieldCornerRadius="20" Height="270" Width="652" Margin="20,0,0,0"/>
        </ScrollViewer>
        <StackPanel Margin="0,330,0,0">
            <Button HorizontalAlignment="Center" Content="Изменить" Margin="0,40,0,0" Height="30" materialDesign:ButtonAssist.CornerRadius="10" Background="#495C66" BorderThickness="0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
